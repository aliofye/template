{
  "name": "api",
  "type": "module",
  "private": true,
  "description": "Backend",
  "scripts": {
    "start": "NODE_ENV=production bun src/app.ts",
    "dev": "bun --hot src/app.ts",
    "build": "tsc -b",
    "compile": "tsc -b --noEmit",
    "lint": "eslint .",
    "test": "DATABASE_URL=$TEST_DATABASE_URL sh -c \"bun run db:push:force && bun test\"",
    "test:ci": "DATABASE_URL=$TEST_DATABASE_URL sh -c \"bun run db:push:force && bun test --bail\"",
    "test:watch": "DATABASE_URL=$TEST_DATABASE_URL sh -c \"bun run db:push:force && bun test --watch\"",
    "test:coverage": "bun test --coverage",
    "db:push": "drizzle-kit push",
    "db:push:force": "drizzle-kit push --force",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun ./src/db/seed.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.14",
    "postgres": "^3.4.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.1"
  }
}
