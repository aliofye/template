{
  "name": "template",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "start": "bun run --filter '*' start",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "compile": "bun run --filter '*' compile",
    "test": "bun run --filter '*' test",
    "test:watch": "bun run --filter '*' test:watch",
    "test:ci": "bun run --filter '*' test:ci",
    "test:coverage": "bun run --filter '*' test:coverage",
    "db:generate": "bun run --filter 'api' db:generate",
    "db:migrate": "bun run --filter 'api' db:migrate",
    "db:seed": "bun run --filter 'api' db:seed",
    "lint": "bun run --filter '*' lint",
    "lint:fix": "bun run --filter '*' lint:fix"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "lefthook": "^1.8.4",
    "prettier": "^3.4.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  }
}
